#!groovy
pipeline {
    agent any
    stages {
		stage('Code checkout') {
			steps {
				deleteDir()
				checkout scm
            }
        }
        stage('dry run') {
			steps {
                sh '''sudo su root
                virtualenv --python=python2.7 custodian
                source custodian/bin/activate
                pip install c7n
                custodian validate ec2Stop.yaml
                custodian run -s . --region us-east-1 ec2Stop.yaml
                chmod -R 777 /var/lib/jenkins/workspace/custodian'''
            }
        }
    }
}