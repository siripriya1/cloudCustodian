#!groovy
pipeline {
    agent any
    stages {
		stage('Code checkout') {
			steps {
				deleteDir()
				checkout scm
            }
        }
        stage('dry run') {
			steps {
                sh 'sudo su'
                sh 'virtualenv --python=python2.7 custodian'
                sh 'source custodian/bin/activate'
                sh 'sudo pip install c7n'
                sh 'custodian validate ec2Stop.yml'
                sh 'custodian run --dryrun -s . ec2Stop.yml'
                sh 'chmod -R 777 /var/lib/jenkins/workspace/custodian'
            }
        }
    }
}